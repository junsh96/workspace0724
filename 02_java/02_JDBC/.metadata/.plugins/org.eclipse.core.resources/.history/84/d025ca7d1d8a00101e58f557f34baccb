package com.semi.cm.service;

import java.sql.Connection;
import java.util.ArrayList;
import java.util.List;

import static com.semi.cm.common.JdbcConnection.*;
import com.semi.cm.model.dao.CommonDao;
import com.semi.cm.model.vo.EmpVo;

public class CommonService {

	private CommonDao cd;

	public CommonService() {
		super();
		this.cd = new CommonDao();
	}
	
	
	/**
	 * 권한 체크
	 * @param list
	 * @return
	 */
	public boolean checkRole(List<EmpVo> list) {
		Connection conn = getConnection();
		boolean result = false;
		
		
		EmpVo em = new EmpVo();
		em.setEmpId(list.get(0).getEmpId());
		List<EmpVo> empList = new ArrayList<>();
		
		empList = cd.checkRole(em,conn);
		
		return result;
	}
	
}
