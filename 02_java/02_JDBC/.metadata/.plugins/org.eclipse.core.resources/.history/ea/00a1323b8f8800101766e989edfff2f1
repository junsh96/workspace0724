			REQ_DATE,
			ORDER_REQ_ID
		) VALUES (
			SEQ_ORDEQ.NEXTVAL,
			?,
			?,
			'R', -- 요청중
			SYSDATE,
			?	
		)
	</entry>
	<!-- 발주 요청 처리 -->
	<entry key="orderReqRespone">
		UPDATE T_ITEM_ORDER
		SET
			ORDER_STATE = ?,
			ORDER_CANCEL_REASON = ?,
			ORDER_RES_ID = ?
		WHERE ORDER_NO = ?
	</entry>
