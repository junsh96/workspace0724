		) VALUES (
			SEQ_REQEQ.NEXTVAL,
			?,
			?,
			'R', -- 요청중
			SYSDATE,
			?
		)
	</entry>
	<!-- 비품 사용 요청 처리 -->
	<entry key="useReqRespone">
		UPDATE T_ITEM_USE
