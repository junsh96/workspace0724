		)
	</entry>
	<!-- 발주 요청 조회 -->
	<entry key="selectOrderList">
		SELECT ORDER_NO,
				ITEM_CODE,
				ORDER_CNT,
				ORDER_STATE,
				REQ_DATE,
				ORDER_CANCEL_REASON,
				ORDER_REQ_ID,
				ORDER_RES_ID
		FROM T_ITEM_ORDER
		WHERE 1=1
		AND ITEM_CODE LIKE '%'||?||'%'
		AND ORDER_STATE LIKE '%'||?||'%'
	</entry>
	<!-- 사용 요청 조회 -->
	<entry key="selectUseList">
		SELECT REQ_NO,
				ITEM_CODE,
				REQ_CNT,
				REQ_STATE,
				REQ_DATE,
				REQ_CANCEL_REASON,
				REQ_ID,
				RES_ID
		FROM T_ITEM_USE
		WHERE 1=1
		AND ITEM_CODE LIKE '%'||?||'%'
		AND REQ LIKE '%'||?||'%'
